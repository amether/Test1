<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/best_seller_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="18dp">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="81dp"
            android:layout_height="126dp"
            app:srcCompat="@android:drawable/star_big_on"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/best_seller_cardView"
        app:layout_constraintTop_toTopOf="@+id/best_seller_cardView"
        android:textColor="#e3e2e5"/>

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="#76727f"
        app:layout_constraintStart_toStartOf="@+id/book_name"
        app:layout_constraintTop_toBottomOf="@+id/book_name" />

    <TextView
        android:id="@+id/book_price"
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="#ebe9eb"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/book_author"
        app:layout_constraintTop_toBottomOf="@+id/book_author" />

    <TextView
        android:id="@+id/book_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:text="TextView"
        android:textColor="#ebe9eb"
        app:layout_constraintStart_toEndOf="@+id/book_price"
        app:layout_constraintTop_toTopOf="@+id/book_price" />

    <TextView
        android:id="@+id/book_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#5f5a6a"
        app:layout_constraintStart_toEndOf="@+id/book_score"
        app:layout_constraintTop_toTopOf="@+id/book_score" />
</androidx.constraintlayout.widget.ConstraintLayout>